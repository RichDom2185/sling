{
  "compilerOptions": {
    "outDir": "dist",
    "module": "CommonJS",
    "declaration": true,
    "target": "es2016",
    "lib": ["esnext", "es2018", "es2017", "es2016", "es2015"],
    "sourceMap": true,
    "allowJs": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "incremental": true
  },
  "include": ["src"]
}
